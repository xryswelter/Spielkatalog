{{#each games}}
<!-- Original Buttons -->
    <button type="button" class="btn mt-5 mod-btn" data-toggle="modal" data-target="#exampleModal">
      <div class="card">
        <img class="card-img-top" src={{gamePicture}} alt="Card image cap">
        <div class="card-body">
          <p class="card-text">
            <h5 class="mt-0 name">{{gameName}}</h5>
            <h6 class="mt-0 own">Ownership: <span class="ownership">{{ownedStatus}}</span>
            </h6>
            <h6 class="mt-0">Platform: <span class="platform">{{gameConsole}}</span>
            </h6>
          </p>
        </div>
      </div>
    </button>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">{{gameName}}</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
{{/each}}