<main role="main" class="container">
    <h1 class="mt-5 mb-4 text-center header animated fadeInLeftBig">Add Game</h1>
    <p class="purple-text animated fadeInLeftBig text-center">Search for your favorite games, whether you own or rent them,
        then simply click the add button to add it to your catalog</p>
    <div class="game-search-bar">
        <form class="form-inline mt-2 mb-4 justify-content-center">
            <input class="form-control mr-sm-2" id="gameSearch" type="text" size="85" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" id="submitButton" type="submit">Search</button>
            <select class="custom-select selectStyle my-2 my-sm-0" id="userSelect">
                <option selected>Choose User!</option>
                {{#each users}}
                <option value="{{id}}">{{name}}</option>
                {{/each}}
            </select>
        </form>
        <!-- games list -->
        <div class="list-group">
            <div class="list-group-item list-group-item-action flex-column align-items-start" id="gameList">
                {{#each games}}
                <div class="media">
                    <img class="mr-3" src="{{image.original_url}}" alt="Generic placeholder image">
                    <div class="media-body">
                        <h5 class="mt-0">{{name}}</h5>
                        <p>{{deck}}</p>
                        <p><button class="btn btn-outline-danger mt-2" type="submit">Add</button></p>

                    </div>

                </div>
            </div>
            {{/each}}
        </div>
    </div>
</main>